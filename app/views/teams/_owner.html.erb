<div class="user-creatives ">
    <div class="dropdown-actions">
        <i class="admin-badge ico-badge"></i>
        <a href="#" class="user-image img-avatar">
            <%=image_tag team_user.profile_image, { alt: "" ,width: '184px' , height: '184px'} %>
        </a>
        <span class='name-label'><%=team_user.name%></span>
        <ul class="dropdown-menu-actions">
            <li>
                <a class='private' href="<%=team_path(@team, private: true, user_id:team_user.id)%>" data-profile-id="<%=team_user.id%>">
                    <i class="ico-message"></i>
                </a>
            </li>
            <li>
                <a class="profile" href="<%=profile_path(team_user.id)%>" data-profile-id="<%=team_user.id%>">
                    <i class="ico-profile"></i>
                </a>
            </li>
        </ul>
        <span class='hide undericon' id='private'>PRIVATE MESSAGE</span>
        <span class='hide undericon' id='profile'>PROFILE PAGE</span>
    </div>
</div>
