<div class="modal modal-small fade" id="modal-delete">
	<div class="modal-dialog">
		<div class="modal-content">
			<button type="button" class="modal-close" data-dismiss="modal" aria-label="Close">
				<i class="ico-close"></i>
			</button>

			<div class="modal-body">
				<div class="form form-action">
					<%= form_for(InMessage.new,:url => message_archive_path ,:remote => true ,:html => { :method => :post ,id: "delete_message_form_id" }) do |f| %>
						<%= f.hidden_field(:id,value: 0) %>
						<div class="form-inner">
							<div class="form-head">
								<h4 class="form-title">Delete message</h4><!-- /.form-title -->
							</div><!-- /.form-head -->

							<div class="form-body">
								<div class="form-entry">
									<p>Are you sure you want to delete this message?</p>
								</div><!-- /.form-entry -->
							</div><!-- /.form-body -->

							<div class="form-actions text-center">
								<button class="btn btn-blue form-btn" data-dismiss="modal">Cancel</button>
								<button type="submit" class="btn form-btn">Yes</button>
								<i class="fa fa-spinner fa-2x fa-pulse hidden"></i>
							</div><!-- /.form-actions -->
						</div><!-- /.form-inner -->
					<% end %>		
				</div><!-- /.form-action -->
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

