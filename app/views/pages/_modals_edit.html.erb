										</div><!-- /.form-row -->
									</div><!-- /.col-sm-6 -->
								</div><!-- /.row -->

								<div class="row">
									<div class="col-sm-6">
										<div class="form-row">
											<label for="field-freelancer-first-name" class="form-label">First Name</label>

											<div class="form-controls">
												<!-- <input type="text" class="form-control" name="field-freelancer-first-name" id="field-freelancer-first-name" value="" placeholder=""> -->
												<%= f.text_field :firstname, :no_label => true , :class =>"form-control" ,:placeholder => "" %>
											</div><!-- /.form-controls -->
										</div><!-- /.form-row -->
									</div><!-- /.col-sm-6 -->

