<% if current_user.admin? %>

<div class="modal fade" id="modal-edit-profile-admin" data-backdrop="static">
	<div class="modal-dialog">
		<div class="modal-content">
			<button type="button" class="modal-close" data-dismiss="modal" aria-label="Close">
				<i class="ico-close"></i>
			</button>

			<div class="modal-body">
				<div class="form form-signup">

					<div class="form-inner">
						<div class="form-head">

							<%= render :partial => 'pages/profile_avatars'  %>

							<h4 class="form-title">Admin Profile</h4>
						</div>
						<%= form_for(current_user, :as => :user, :url => registration_path(:user), :html => { :method => :put, remote: true, :role => 'form',"data-error-id" => "edit_admin_form_err", "data-parent"=>"modal-edit-profile-admin",:multipart => true}) do |f| %>
						<%= f.hidden_field :edit_profile , :value => true %>
						<div class="form-body">
							<div class="form-group">
								<div class="row">
									<div class="col-sm-6">
										<div class="form-row">
											<label for="field-email" class="form-label">
												Email
											</label>

											<div class="form-controls">
												<%= f.text_field :email, :no_label => true , :class =>"form-control" ,:placeholder => "", :type=>"email" %>
											</div>
										</div>
									</div>

									<div class="col-sm-6">
										<div class="form-row">
											<label for="field-email2" class="form-label">Additional Email</label>

											<div class="form-controls">
												<%= f.text_field :email2, :no_label => true , :class =>"form-control" ,:placeholder => "" , :type=>"email" %>
											</div>

										</div>
									</div>
								</div>

								<div class="row">
									<div class="col-sm-6">
										<div class="form-row">
											<label for="field-first-name" class="form-label">First Name</label>

											<div class="form-controls">
												<%= f.text_field :firstname, :no_label => true , :class =>"form-control" ,:placeholder => "" %>
											</div>
										</div>
									</div>

									<div class="col-sm-6">
										<div class="form-row">
											<label for="field-last-name" class="form-label">Last Name</label>

											<div class="form-controls">
												<%= f.text_field :lastname, :no_label => true , :class =>"form-control" ,:placeholder => "" %>
											</div>
										</div>
									</div>
								</div>

								<div class="form-socials">
									<ul class="list-socials">
										<li>
											<i class="ico-linkedin"></i>

											<span>Linkedin</span>

											<div class="checkbox-link">
												<%= profile_connect("linkedin",current_user.profile) %>

												<label for="field-connect-linkedin">
													<span class="checkbox-label">Link</span>

													<span class="checkbox-label-checked">Unlink</span>
												</label>
											</div><!-- /.checkbox-link -->
										</li>
									</ul><!-- /.list-socials -->

									<ul class="list-socials collapse" id="additional-socials">

										<li>
											<i class="ico-vimeo"></i>

											<span>Vimeo</span>

											<div class="checkbox-link">
												<%= profile_connect("vimeo",current_user.profile) %>
												<label for="field-connect-vimeo">
													<span class="checkbox-label">Link</span>

													<span class="checkbox-label-checked">Unlink</span>
												</label>
											</div>
										</li>

										<li>
											<i class="ico-behance"></i>

											<span>Behance</span>

											<div class="checkbox-link">
												<%= profile_connect("behance",current_user.profile) %>
												<label for="field-connect-behance">
													<span class="checkbox-label">Link</span>

													<span class="checkbox-label-checked">Unlink</span>
												</label>
											</div>
										</li>
									</ul><!-- /.list-socials -->

									<div class="form-socials-expand">
										<a href="#additional-socials" data-toggle="collapse">
											<i class="ico-arrow-down-medium"></i>

											<span>Additional Networks</span>
										</a>
									</div><!-- /.form-socials-expand -->
								</div><!-- /.form-socials -->

							</div>
						</div>

						<div class="form-actions text-center">
							<input type="submit" value="Update" class="btn form-btn">
							<i class="fa fa-spinner fa-2x fa-pulse hidden"></i>
						</div>

						<div class="form-error" id="edit_admin_form_err">
							<p></p>
						</div>
					</div>

					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

<% else  %>

