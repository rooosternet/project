											</div><!-- /.radio -->
										</li>

										<li>
											<div class="radio-type">
												<!-- <input type="radio" name="profile-type" id="field-company"> -->
												<input type="radio" class="radio-btn" name="profile-type" id="field-company" <%="checked" if builder.object.is_company? %> >
												<label for="field-company">company</label>
											</div><!-- /.radio -->
										</li>
									</ul><!-- /.list-radios -->
								</div><!-- /.form-type -->

								<div class="row">
									<div class="col-sm-6">
										<div class="form-row">
											<label for="field-title" class="form-label">Title</label>

											<div class="form-controls">
												<!-- <input type="text" class="form-control" name="field-title" id="field-title" value="" placeholder=""> -->
												<%= builder.text_field :job_title, :no_label => true , :class =>"form-control" ,:placeholder => "Ex. Creative Director" %>
											</div><!-- /.form-controls -->
										</div><!-- /.form-row -->
									</div><!-- /.col-sm-6 -->

									<div class="col-sm-6">
										<div class="form-row">
											<label for="field-company-name" class="form-label">Company Name</label>

											<div class="form-controls">
												<!-- <input type="text" class="form-control" name="field-company-name" id="field-company-name" value="" placeholder=""> -->
												<%= builder.text_field :company_name, :no_label => true , :class =>"form-control" ,:placeholder => "" %>
											</div><!-- /.form-controls -->
										</div><!-- /.form-row -->
									</div><!-- /.col-sm-6 -->
								</div><!-- /.row -->

								<div class="row">
									<div class="col-sm-6">
										<div class="form-row">
											<label for="field-freelancer-location" class="form-label">
												Location <em>(City, State, Country)</em>
											</label>

											<div class="form-controls">
												<!-- <input type="text" class="form-control" name="field-freelancer-location" id="field-freelancer-location" value="" placeholder=""> -->
												<%= builder.text_field :location, :no_label => true , :class =>"form-control" ,:placeholder => "" %>
											</div><!-- /.form-controls -->
										</div><!-- /.form-row -->
									</div><!-- /.col-sm-6 -->

									<div class="col-sm-6">
										<div class="form-row">
											<label for="field-website" class="form-label">Website</label>

											<div class="form-controls">
												<!-- <input type="text" class="form-control" name="field-website" id="field-website" value="" placeholder=""> -->
												<%= builder.text_field :online_portfolio, :no_label => true , :class =>"form-control" ,:placeholder => "" %>
											</div><!-- /.form-controls -->
										</div><!-- /.form-row -->
									</div><!-- /.col-sm-6 -->
								</div><!-- /.row -->

									<!-- <div class="form-row">
										<label class="form-label"><i class="ico-twitter"></i> Twitter</label>
										<%#= profile_connect_btn("twitter",current_user.profile) %>
									</div> -->

									<div class="form-socials">
										<ul class="list-socials">
											<li>
												<i class="ico-linkedin"></i>

												<span>Linkedin</span>

												<div class="checkbox-link">
													<!-- <input type="checkbox" name="field-link1" id="field-link1"> -->
													<%= profile_connect("linkedin",current_user.profile) %>

													<label for="field-connect-linkedin">
														<span class="checkbox-label">Link</span>

														<span class="checkbox-label-checked">Unlink</span>
													</label>
												</div><!-- /.checkbox-link -->
											</li>
										</ul><!-- /.list-socials -->

										<ul class="list-socials collapse" id="additional-socials">

											<li>
												<i class="ico-vimeo"></i>

												<span>Vimeo</span>

												<div class="checkbox-link">
													<!-- <input type="checkbox" name="field-link5" id="field-link5"> -->
													<%= profile_connect("vimeo",current_user.profile) %>
													<label for="field-connect-vimeo">
														<span class="checkbox-label">Link</span>

														<span class="checkbox-label-checked">Unlink</span>
													</label>
												</div>
											</li>

											<li>
												<i class="ico-behance"></i>

												<span>Behance</span>

												<div class="checkbox-link">
													<!-- <input type="checkbox" name="field-link6" id="field-link6"> -->
													<%= profile_connect("behance",current_user.profile) %>
													<label for="field-connect-behance">
														<span class="checkbox-label">Link</span>

														<span class="checkbox-label-checked">Unlink</span>
													</label>
												</div>
											</li>
										</ul><!-- /.list-socials -->

										<!-- <div class="form-socials-expand">
											<a href="#additional-socials" data-toggle="collapse">
												<i class="ico-arrow-down-medium"></i>

												<span>Additional Networks</span>
											</a>
										</div> -->
									</div><!-- /.form-socials -->

									<div class="form-row">
										<label for="field-skills" class="form-label">Skills</label>

										<div class="form-controls">
											<%= builder.select :skills, skills_options_for_select(builder.object.skills) , {} , {:multiple => true ,:no_label => true, :class => "select-autocomplete" ,:placeholder => "Skills"} %>
											<!-- <select name="field-suggest-skills" id="field-suggest-skills" class="select-autocomplete" multiple data-placeholder="">
												<option value="director">Director</option>

												<option value="motion-graphics">Motion Graphics</option>

												<option value="animation">Animation</option>

												<option value="art-direction">Art Direction</option>

												<option value="design">Design</option>

												<option value="illustrator">Illustrator</option>

												<option value="after-effects">After Effects</option>
											</select> -->

										</div><!-- /.form-controls -->
									</div><!-- /.form-row -->
									<% end %>
								</div><!-- /.form-group -->
							</div><!-- /.form-body -->

							<div class="form-actions text-center">
								<input type="submit" value="Update" class="btn form-btn">
								<i class="fa fa-spinner fa-2x fa-pulse hidden"></i>
							</div><!-- /.form-actions -->


							<div class="form-error" id="edit_user_form_err">
								<p></p>
							</div><!-- /.form-error -->

							<div class="form-foot-entry">
								<p>Please add as many details as possible. Our team reviews all profiles before approving them to appear on our search for recommended creatives. If you are already up there, make sure your details are up to date.</p>
							</div><!-- /.form-foot-entry -->
						</div><!-- /.form-inner -->

						<div class="form-foot">
							<!-- <p>Need help? <a href="mailto:info@roooster.co">drop us a line</a>.</p> -->
							<p>Need help? <a href="<%= contact_us_path %>">drop us a line</a>.</p>
						</div><!-- /.form-foot -->
						<!-- </form> -->
						<% end %>
					</div><!-- /.form-signup -->
				</div>
			</div><!-- /.modal-content -->
		</div><!-- /.modal-dialog -->
	</div><!-- /.modal -->

	<% end  %>

	<div class="modal modal-small fade" id="modal-edit-profile-passowrd" data-backdrop="static">
		<div class="modal-dialog">
			<div class="modal-content">
				<button type="button" class="modal-close" data-dismiss="modal" aria-label="Close">
					<i class="ico-close"></i>
				</button>

				<div class="modal-body">
					<div class="form form-signup">

						<%= form_for(current_user, :as => :user, :url => registration_path(:user,chpass: true),:remote => true , :html => { :method => :put, :role => 'form',:id => "edit_password_form_id" ,"data-error-id" => "edit_password_form_err" , "data-parent"=>"modal-edit-profile-passowrd"}) do |f| %>

						<div class="form-inner-alt">
							<div class="form-head">
								<h4 class="form-title">Change Password</h4>
								<p></p>
							</div>

							<div class="form-body">
								<div class="form-row">
									<%= f.label :current_password , class: 'form-label'%>
									<div class="form-controls">
										<%= f.password_field :current_password,value: '' ,:required => true , :autocomplete => 'off', class: 'form-control' %>
									</div>
								</div>

								<div class="form-row">
									<%#= f.label :password , class: 'form-label'%>
									<label class="form-label" for="user_password">New Password</label>
									<div class="form-controls">
										<%= f.password_field :password,value: '' ,:required => true , :autocomplete => 'off', class: 'form-control' %>
									</div>
								</div>

								<div class="form-row">
									<%= f.label :password_confirmation , class: 'form-label'%>
									<div class="form-controls">
										<%= f.password_field :password_confirmation,value: '',  :required => true , class: 'form-control' %>
									</div>
								</div>

							</div>

							<div class="form-actions text-center">
								<input type="submit" value="Update" class="btn form-btn">
								<i class="fa fa-spinner fa-2x fa-pulse hidden"></i>
							</div>

							<div class="form-error" id="edit_password_form_err">
								<p></p>
							</div>
						</div>

						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
