<section class="section section-blog section-blog-secondary test" id="section3">
	<div class="section-inner">
		<div class="shell">
			<h2 class="section-title">Blog</h2>

			<div class="section-body">
				<ul class="articles">

					<% (@blog_intro || []).each do |post| %>
					
					<li class="article">
						<h3 class="article-title">
							<a href='<%=post[:link]%>' target="_blank"><%=post[:title].html_safe %></a>
						</h3>

						<div class="article-entry">
							<p><%=post[:intro].html_safe %>...</p>
						</div>

						<div class="article-actions">
							<a href='<%=post[:link]%>' target="_blank">
								Read more <i class="ico-arrow-down-small"></i>
							</a>
						</div>
					</li>

					<% end %>	

				</ul>
			</div>

			<footer class="section-foot">
				<a href="http://blog.roooster.co">
					More posts <i class="co-arrow-right-small-orange"></i>
				</a>
			</footer>
		</div>
	</div>
</section>