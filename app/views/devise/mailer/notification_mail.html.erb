<div class="modal-content">
  <div class="modal-body">
    <div class="form form-signup">
      <div class="form-inner">

        <div class="form-head">
          <h4 class="form-title"><%=@user.name%></h4>
        </div>

        <div class="form-body">
          <div class="form-group">
            <div class="row">
              <div class="col-sm-6">
                <div class="form-row">
                  <label for="field-username" class="form-label">
                    Username: <%=@user.email %>
                  </label>
                </div>
              </div>

              <div class="col-sm-6">
                <div class="form-row">
                  <label for="field-additional-email" class="form-label">Additional Email: <%=@user.email2 %>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <hr>
          <div data-toggle="buttons-radio" class="header-actions edit-profile">
            <center>
              <button id="is_company" class="radio-btn btn btn-default <%='active' if @user.profile.is_company? %>">Company</button>
              <button id="is_freelancer" class="radio-btn btn btn-default <%='active' if @user.profile.is_freelancer? %>">Freelancer</button>
            </center>
          </div>
          
          <div class="form-group">
            <div class="row">
              <div class="col-sm-6">
                <div class="form-row">
                  <label for="field-job-title" class="form-label">
                    Title: <%=@user.profile.job_title %>
                  </label>
                </div>
              </div>

              <div class="col-sm-6">

                <div class="form-row">
                  <label for="field-company-name" class="form-label">
                    Company Name: <%=@user.profile.company_name %>
                  </label>
                </div>
              </div>

            </div>

            <div class="row">

              <div class="col-sm-6">
                <div class="form-row">
                  <label for="field-location" class="form-label">
                    Location: <%=@user.profile.location %>
                  </label>
                </div>
              </div>

              <div class="col-sm-6">
                <div class="form-row">
                  <label for="field-website" class="form-label">
                    Website: <%=@user.profile.company_website %>
                  </label>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-row">
                  <label for="field-vimeo" class="form-label">
                    Vimeo: <%=@user.profile.vimeo %>
                  </label>
                </div>
              </div>

              <div class="col-sm-6">
                <div class="form-row">
                  <label for="field-behance" class="form-label">
                    Behance: <%=@user.profile.behance %>
                  </label>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-6">
                <div class="form-row">
                  <label for="field-linkedin" class="form-label">
                    LinkedIn: <%=@user.profile.linkedin_profile %>
                  </label>
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-row">
                  <label for="field-social-links" class="form-label">
                    Other Social Links: <%=@user.profile.social_links %>
                  </label>
                </div>
              </div>
            </div>
            <hr>
            <div class="form-row">
              <label for="field-skills" class="form-label">
                Skills: <%=@user.profile.skills.join(" , ") %>
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>