<%= form_for(message,:url => bulk_create_message_path  ,:html => { :method => :post, :class => "message-to" ,:role => 'form', :id => 'new_message_form_id'}) do |f| %>
    <%= f.hidden_field(:from_id, value: current_user.id) %>
    <div class="form-body">
        <div class="form-row">
            <div class="form-controls message input">
                <%= f.text_area :note ,:rows => 1, :class =>"form-control" ,:placeholder => "" %>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <i class="fa fa-spinner fa-2x fa-pulse hidden"></i>
    </div>
<% end %>
<script type="text/javascript">
    $(document).ready(function(){
      $('textarea').autosize();
      $('textarea').css('height', '45px');
    });
</script>
